<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#FFEEE8AA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.46"
        android:id="@+id/lLeft"
        android:gravity="center_horizontal">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03 min"
                android:layout_weight="1"
                android:id="@+id/btn3Min">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 min"
                android:layout_weight="1"
                android:id="@+id/btn5Min">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min"
                android:layout_weight="1"
                android:id="@+id/btn10Min">

            </Button>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center|fill_horizontal">
            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="com.manzana.rde.acontdowntimer.RdeSelectorView"
                android:id="@+id/npHours"
                android:layout_weight="1"
                android:orientation="vertical" />

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="com.manzana.rde.acontdowntimer.RdeSelectorView"
                android:layout_weight="1"
                android:id="@+id/npMins" />

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="com.manzana.rde.acontdowntimer.RdeSelectorView"
                android:layout_weight="1"
                android:id="@+id/npSecs" />



        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/lRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/tvTime"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ff090909"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Start"
            android:onClick="startChronometer" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Reset"
            android:onClick="stopChronometer" />
    </LinearLayout>
</LinearLayout>